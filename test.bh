# 測試 return 中斷
f early_return() {
    p "這應該會印"
    r 123
    p "這不會被印"
}
p early_return()

f gcd(a, b) {	#測試%
    @ (b != 0) {
        temp = b
        b = a % b
        a = temp
    }
    r a
}
f gcd(a, b) {	#測試遞迴
    ?(a%b==0){
    	r b
    }~{
    	r gcd(b,a%b)
    }
}

x = 48
y = 18
p "GCD of " + x + " and " + y + " is " + gcd(x, y)