# if-else 判斷與巢狀
? (x > 50) {
    p "x > 50"
} ~ {
    p "x <= 50"
}

# while 迴圈
j = 0
@ (j < 5) {
    j = j + 1
    ? (j == 3) {
        >>      # continue
    }
    ? (j == 4) {
        <<      # break
    }
    p j
}

# for 迴圈
$ (i = 0; i < 5; i = i + 1) {
    ? (i == 2) {
        <<      # continue
    }
    ? (i == 4) {
        >>      # break
    }
    p i
}

# switch-case 判斷
t = 2
^ (t) {
    | 1: {
        p "one"
    }
    | 2: {
        p "two"
    }
    _: {
        p "not one or two"
    }
}

